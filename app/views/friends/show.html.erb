
<style>
div.a {
  text-transform: uppercase;
  font-family: initial;
  
}
</style>

<div class="jumbotron">
  <div class="a">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.surname %>
  </h1>
  </div>
   <hr class="my-4">

  <pre class="lead">Phone    : <%= @friend.phone %></pre>
  <pre class="lead">Email    : <%= @friend.email %></pre>
  <pre class="lead">Birthday : <%= @friend.birthday %></pre>
  

  <hr class="my-4">
 

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-primary" %>
</div>
